<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h1 class="h4 mb-0">Edit Restaurant</h1>
        </div>
        <div class="card-body">
          <%= simple_form_for @restaurant, html: { class: 'form-horizontal' } do |f| %>
            <%= f.input :name, label: 'Name', required: true, input_html: { class: 'form-control' } %>
            <%= f.input :address, label: 'Address', required: true, input_html: { class: 'form-control' } %>
            <%= f.input :phone_number, label: 'Phone Number', required: true, input_html: { class: 'form-control' } %>
            <%= f.input :category,
                        label: 'Category',
                        required: true,
                        input_html: { class: 'form-control' },
                        collection: %w[chinese italian japanese french belgian],
                        prompt: 'Select a category' %>
            <div class="mt-3">
              <%= f.submit 'Update Restaurant', class: 'btn btn-primary' %>
              <%= link_to 'Cancel', restaurants_path, class: 'btn btn-secondary ms-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
