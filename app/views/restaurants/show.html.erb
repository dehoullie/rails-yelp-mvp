<%# Show restaurant page with Name, address, phone number, category and list of reviews %>
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
    <%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-secondary mb-3' %>
      <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h1 class="h4 mb-0"><%= @restaurant.name %> <%=  @restaurant.average_rating ? '⭐️' * @restaurant.average_rating : ''  %></h1>
          <div>
            <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: 'btn btn-warning btn-sm me-1' %>
            <%= link_to 'Delete', restaurant_path(@restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
          </div>
        </div>
        <div class="card-body">
          <h5 class="card-title">Details</h5>
          <p class="card-text"><strong>Address:</strong> <%= @restaurant.address %></p>
          <p class="card-text"><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>
          <p class="card-text"><strong>Category:</strong> <%= @restaurant.category %></p>
          <h5 class="card-title">Reviews</h5>
          <div class="list-group">
            <% @restaurant.reviews.each do |review| %>
              <div class="list-group-item">
                <p class="mb-1"><%= review.content %></p>
                <small>Rating: <%= review.rating %></small>
              </div>
            <% end %>
          </div>
          <div class="mt-3">
            <%= link_to 'Add Review', restaurant_reviews_path(@restaurant), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
