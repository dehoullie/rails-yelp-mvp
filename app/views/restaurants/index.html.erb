<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h1 class="h4 mb-0">Restaurants</h1>
          <%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-light btn-sm' %>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Name</th>
                  <th>Phone Number</th>
                  <th>Address</th>
                  <th>Category</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @restaurants.each do |restaurant| %>
                  <tr>
                    <td><%= restaurant.name %></td>
                    <td><%= restaurant.phone_number %></td>
                    <td><%= restaurant.address %></td>
                    <td><%= restaurant.category %></td>
                    <td>
                      <%= link_to 'Show', restaurant_path(restaurant), class: 'btn btn-info btn-sm me-1' %>
                      <%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-warning btn-sm me-1' %>
                      <%= link_to 'Delete', restaurant_path(restaurant), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-danger btn-sm' %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
