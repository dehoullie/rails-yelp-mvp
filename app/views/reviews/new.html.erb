<%# Page to insert restaurant review, with the content and the number of rating with validation from 0 to 5 %>
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h1 class="h4 mb-0">New Review for <%= @restaurant.name %></h1>
        </div>
        <div class="card-body">
          <% if @review.errors.any? %>
            <div class="alert alert-danger">
              <ul>
                <% @review.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <%= simple_form_for [@restaurant, @review], html: { class: 'form-horizontal' } do |f| %>
            <%= f.input :content, label: 'Content', required: true, input_html: { class: 'form-control' } %>
            <%= f.input :rating, label: 'Rating', required: true, as: :select, collection: (0..5).to_a, input_html: { class: 'form-control' } %>
            <div class="mt-3">
              <%= f.submit 'Create Review', class: 'btn btn-primary' %>
              <%= link_to 'Cancel', restaurant_path(@restaurant), class: 'btn btn-secondary ms-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
